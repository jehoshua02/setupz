#!/bin/bash

# simple prompt
PS1='$ '

# show pwd in title
function title() { echo -ne "\033]0;$1\007"; }
function cd() { builtin cd $1; title `pwd`; }
cd `pwd`

# composer
alias composer='php composer.phar'
alias composerinit='curl -s http://getcomposer.org/installer | php;
composer init; echo composer.phar >> .gitignore'
alias composerdump='composer dumpautoload --optimize'

