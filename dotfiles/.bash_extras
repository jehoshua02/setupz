#!/bin/bash

# simple prompt
color_yellow_bold="\[\033[1;33m\]"
color_default="\[\033[0m\]"
PS1="${color_yellow_bold}$ ${color_default}"

# show pwd in title
function title() { echo -ne "\033]0;$1\007"; }
function cd() { builtin cd $1; title `pwd`; }
cd `pwd`

# composer
alias composerdump='composer dumpautoload --optimize'

# debug php scripts
alias xdebug='export XDEBUG_CONFIG=""'
alias noxdebug='unset XDEBUG_CONFIG'

# phpunit - assumes composer installed, project root, tests directory
alias test='vendor/bin/phpunit --colors --bootstrap tests/bootstrap.php tests'

