set autoindent
set smartindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set backspace=indent,eol,start

set number
set numberwidth=4
nmap <C-N><C-N> :set invnumber<CR>

set hlsearch
set incsearch
set ignorecase
set smartcase

set history=700

set scrolloff=999
set sidescroll=999
set cursorline
set whichwrap+=<,>,[,]

set novisualbell

set textwidth=75

filetype indent plugin on
